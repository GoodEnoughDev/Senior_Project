  MX_GPIO_Init();
  MX_I2C1_Init();
  MX_TIM5_Init();
  MX_USART1_UART_Init();

  /* USER CODE BEGIN 2 */
	/* Z80 Configuration----------------------------------------------------------*/

	init_z80_control_signals();
	init_z80_clk(m_z80_clk_freq);
	HAL_Delay(100);
	reset_z80();
  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
	while (1)
	{
  /* USER CODE END WHILE */

  /* USER CODE BEGIN 3 */
		if(m_RD == 1 && m_MREQ == 1){
	  		  read_address = read_z80_address_bus();
	  		  if(read_address < 0x0008){
	  			  HAL_GPIO_WritePin(Z80_WAIT_GPIO_Port,Z80_WAIT_Pin,GPIO_PIN_RESET);
	  			  write_z80_data_bus(program[read_address]);
	  			  HAL_GPIO_WritePin(Z80_WAIT_GPIO_Port,Z80_WAIT_Pin,GPIO_PIN_SET);
	  		  }
	  		  else{
	  			write_z80_data_bus(0x00);
	  		  }
	  		  volatile char temp[15];
	  		  sprintf(temp,"%u\r\n",read_address);
	  		  HAL_GPIO_WritePin(Z80_WAIT_GPIO_Port,Z80_WAIT_Pin,GPIO_PIN_RESET);
	  		  printf(temp);
	  		  HAL_GPIO_WritePin(Z80_WAIT_GPIO_Port,Z80_WAIT_Pin,GPIO_PIN_SET);
	  		  m_RD = 0;
	  		  m_MREQ = 0;
	  	}
//	  	if(m_WR == 1 && m_MREQ == 1){
