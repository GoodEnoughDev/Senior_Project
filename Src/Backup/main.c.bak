	int m_z80_clk_freq = 100000;
	volatile uint16_t read_address;
	uint16_t write_address = 0;
	memory_map address_space;
	address_space.ROM.start = 0;
	address_space.ROM.stop = 32767;
	address_space.RAM.start = 32768;
	address_space.RAM.stop = 62335;
	address_space.display.start = 62336;
	address_space.display.stop = 65535;
	// Allocate memory for 80x40 character display
	char display_memory[40][80];
	uint8_t program[] = {{0xC3},{0x00},{0x03},{0x00},{0x00},{0xC3},{0x00},{0x00}};
